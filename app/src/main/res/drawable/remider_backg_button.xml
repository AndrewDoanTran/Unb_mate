<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background image -->
    <item>
        <bitmap
            android:src="@drawable/reminder_back_ground"
            android:gravity="center"
            android:scaleType="centerCrop"/>
    </item>

    <!-- Optional semi-transparent overlay for text visibility -->
    <item>
        <shape>
            <solid android:color="#80000000"/> <!-- 50% black -->
            <corners android:radius="16dp"/> <!-- rounded corners -->
        </shape>
    </item>

</layer-list>
