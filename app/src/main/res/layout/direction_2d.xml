<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Zoomable map -->

    <!-- Start location EditText -->

    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/fredericton_map"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/startingLocat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Enter your current location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startMicButton"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Mic button for start EditText -->
    <ImageButton
        android:id="@+id/startMicButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/mic_img"
        android:contentDescription="Mic"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/startingLocat"
        app:layout_constraintBottom_toBottomOf="@id/startingLocat"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Destination EditText -->
    <EditText
        android:id="@+id/endingLocat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Enter the destination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/destMicButton"
        app:layout_constraintTop_toBottomOf="@id/startingLocat"/>

    <!-- Mic button for destination EditText -->
    <ImageButton
        android:id="@+id/destMicButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/mic_img"
        android:contentDescription="Mic"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/endingLocat"
        app:layout_constraintBottom_toBottomOf="@id/endingLocat"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
