<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map Image -->
    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fredericton_map"/>

    <!-- Starting Location EditText -->

    <!-- Mic Button for Start -->
    <EditText
        android:id="@+id/startingLocat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Enter your current location"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toStartOf="@id/startMicButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/startMicButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/mic_img_2"
        android:contentDescription="Mic"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/startingLocat"
        app:layout_constraintBottom_toBottomOf="@id/startingLocat"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ending Location EditText -->
    <EditText
        android:id="@+id/endingLocat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Enter the destination"
        android:paddingStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/destMicButton"
        app:layout_constraintTop_toBottomOf="@id/startingLocat"
        app:layout_constraintHorizontal_bias="0.38"/>

    <!-- Mic Button for Destination -->
    <ImageButton
        android:id="@+id/destMicButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/mic_img_2"
        android:contentDescription="Mic"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/endingLocat"
        app:layout_constraintBottom_toBottomOf="@id/endingLocat"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start dot đỏ -->
    <ImageView
        android:id="@+id/startDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/starting_dot"
        android:visibility="invisible"/>

    <!-- End dot xanh lá -->
    <ImageView
        android:id="@+id/endDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/destination_dot"
        android:visibility="invisible"/>

    <!-- Connecting dots xanh -->
    <ImageView
        android:id="@+id/libraryDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/studentUnionDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/keirsteadDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/securityDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/macLaganDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/headHallDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/forestryDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tooleHallDot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/connect_dot"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/intersection1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/triangle_intersection"
        android:visibility="invisible"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/intersection2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/triangle_intersection"
        android:visibility="invisible"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/intersection3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/triangle_intersection"
        android:visibility="invisible"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/intersection4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/triangle_intersection"
        android:visibility="invisible"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/intersection5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/triangle_intersection"
        android:visibility="invisible"
        android:scaleType="fitXY"/>

    <ca.unb.mobiledev.unb_mate.LineView
        android:id="@+id/lineView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/mapImage"
        app:layout_constraintBottom_toBottomOf="@id/mapImage"
        app:layout_constraintStart_toStartOf="@id/mapImage"
        app:layout_constraintEnd_toEndOf="@id/mapImage"/>


</androidx.constraintlayout.widget.ConstraintLayout>
